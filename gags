<?php
$file = fopen('file.txt', 'a+');
if (isset($_POST['butt'])) {
    $id = $_POST['idnum'];
    $name = $_POST['name'];
    $course = $_POST['crs'];

    fwrite($file, "\n" . $id . "*");
    fwrite($file, $name . "*");
    $flag = fwrite($file, $course);
    if ($flag) {
        header('location: ./main.php');
        fclose($file);
    } else {
        fclose($file);
}
}

?>

